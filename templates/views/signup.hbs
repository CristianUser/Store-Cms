<div class="container">
	<h1>Registro</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			{{#if customerSubmitted}}
			<h3>Gracias por registrarte.</h3>
			{{else}}
			<form method="post">
				<input type="hidden" name="action" value="signup">
				<div class="form-group {{#if validationErrors.name}}has-error{{/if}}">
					<label>Nombre</label>
					<input type="text" name="name.full"  class="form-control" value="{{formData.[name.full]}}">
				</div>
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" class="form-control" value="{{formData.email}}">
				</div>
				<div class="form-group">
					<label>Telefono</label>
					<input type="text" name="phone" placeholder="(opcional)" class="form-control" value="{{formData.phone}}">
				</div>
				<div class="form-group">
					<label>Contrase単a</label>
					<input type="password" name="password" placeholder="Contrase単a" class="form-control" value="{{formData.password}}">
				</div>
				<div class="form-group">
					<label>Contrase単a</label>
					<input type="password" name="passwordConfirm" placeholder="Repita la contrase単a" class="form-control" value="{{formData.password}}">
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Registrarse</button>
				</div>
			</form>
			{{/if}}
		</div>
	</div>
</div>
