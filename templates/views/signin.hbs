<div class="container">
	<h1>Iniciar Sesion</h1>
</div>
<div class="container">
	<div class="row">
		<div class="col-sm-8 col-md-6">
			<form method="post">
				<input type="hidden" name="action" value="signin">
				<div class="form-group {{#if validationErrors.email}}has-error{{/if}}">
					<label>Email</label>
					<input type="email" name="email" placeholder="Email" class="form-control" value="{{formData.email}}">
				</div>
				<div class="form-group">
					<label>Contraseña</label>
					<input type="password" name="password" placeholder="Contraseña" class="form-control" value="{{formData.password}}">
				</div>
				<div class="form-actions">
					<button type="submit" class="btn btn-primary">Iniciar Sesion</button>
				</div>
					<a href="/keystone/signin">O eres admin?</a>

			</form>
		</div>
	</div>
</div>
